<div class="container text-center account-container">
    <div class="row gy-5">
        <div class="header">
            <h2>Account Settings</h2>
        </div>
    </div>
    <div class="row gy-5">
        <form class="form" id="account-form">
            <div class="account-info">
                <div class="form-group">
                    <label for="email-account">NEW EMAIL</label>
                    <input class="form-input" type="email" id="email-account" />
                </div>
                <div class="form-group">
                    <label for="password-account">NEW PASSWORD</label>
                    <input class="form-input" type="password" id="password-account" />
                </div>
            </div>
        </form>
    </div>
    <div class="row gy-5">
        <div class="form-group">
            <button class="btn btn-primary" form="account-form" type="submit">Update Account</button>
        </div>
    </div>
</div>

<script src="./js/account.js"></script>